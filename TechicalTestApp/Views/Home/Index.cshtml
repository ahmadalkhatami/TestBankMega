@{
    ViewData["Title"] = "Form BPKB";
}

<div class="card">
    <div class="card-header">
        <h3>Form</h3>
    </div>
    <div class="card-body">
        <form id="bpkbForm">
            <div class="row">
                <div class="col-6">
                    <div class="mb-3">
                        <label for="agreementInput" class="form-label">Agreement Number:</label>
                        <input type="text" id="agreementInput" name="agreementNumber" class="form-control form-control-sm" placeholder="Input Agreement Number">
                    </div>
                    <div class="mb-3">
                        <label for="branchIdInput" class="form-label">Branch Id:</label>
                        <input type="text" id="branchIdInput" name="branchId" class="form-control form-control-sm" placeholder="Input Branch Id">
                    </div>
                    <div class="mb-3">
                        <label for="noBPKBInput" class="form-label">No. BPKB:</label>
                        <input type="text" id="noBPKBInput" name="noBPKB" class="form-control form-control-sm" placeholder="Input No. BPKB">
                    </div>
                    <div class="mb-3">
                        <label for="tanggalBPKBInInput" class="form-label">Tanggal BPKB:</label>
                        <input type="date" id="tanggalBPKBInInput" name="tanggalBPKBIn" class="form-control form-control-sm">
                    </div>
                    <div class="mb-3">
                        <label for="tanggalBPKBInput" class="form-label">Tanggal BPKB:</label>
                        <input type="date" id="tanggalBPKBInput" name="tanggalBPKB" class="form-control form-control-sm">
                    </div>
                    <div class="mb-3">
                        <label for="noFakturInput" class="form-label">No. Faktur:</label>
                        <input type="text" id="noFakturInput" name="noFaktur" class="form-control form-control-sm" placeholder="Input No. Faktur">
                    </div>
                </div>
                <div class="col-6">
                    <div class="mb-3">
                        <label for="tanggalFakturInput" class="form-label">Tanggal Faktur:</label>
                        <input type="date" id="tanggalFakturInput" name="tanggalFaktur" class="form-control form-control-sm">
                    </div>
                    <div class="mb-3">
                        <label for="nomorPolisiInput" class="form-label">Nomor Polisi:</label>
                        <input type="text" id="nomorPolisiInput" name="nomorPolisi" class="form-control form-control-sm" placeholder="Input Nomor Polisi">
                    </div>
                    <div class="mb-3">
                        <label for="lokasiPenyimpananInput" class="form-label">Lokasi Penyimpanan:</label>
                        <input type="text" id="lokasiPenyimpananInput" name="lokasiPenyimpanan" class="form-control form-control-sm">
                    </div>
                </div>
            </div>
            <hr/>
            <div class="row justify-content-center">
                <div class="col-md-4 mb-3">
                    <button type="button" class="btn btn-secondary w-100" onclick="resetForm()">Cancel</button>
                </div>
                <div class="col-md-4 mb-3">
                    <button type="button" class="btn btn-primary w-100" onclick="submitForm()">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    function resetForm() {
        document.getElementById('bpkbForm').reset();
    }

    async function submitForm() {
        const form = document.getElementById('bpkbForm');
        const formData = new FormData(form);

        const data = {};
        formData.forEach((value, key) => {
            data[key] = value;
        });

        try {
            const response = await fetch('https://localhost:5000/api/BPKB/insert', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json' // Ubah Content-Type ke application/json
                },
                body: JSON.stringify(data) // Kirim data dalam format JSON
            });
            console.log(response);
            if (response.ok) {
                const result = await response.json();
                alert('Data successfully saved');
            } else {
                alert('Failed to save data');
            }
        } catch (error) {
            console.error('Error:', error);
            alert('An error occurred');
        }
    }
</script>
